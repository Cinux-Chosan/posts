

<div class="container h100p article-detail">
    <header class="fixed-nav">
        <div class="container h50px">
            <nav class="navbar navbar-inverse">
                <ul class="nav navbar-nav w100p">
                    <li class="cur-pointer">{{#link-to 'index' class="navbar-brand"}}Home{{/link-to}}</li>
                    <li class="pull-right cur-pointer">{{#link-to 'login'}}Sign In{{/link-to}}</li>
                    <li class="pull-right cur-pointer">{{#link-to 'article.pub'}}Publish{{/link-to}}</li>
                    <li class="pull-right cur-pointer">{{#link-to 'article.art_list'}}Article List{{/link-to}}</li>


                </ul>
            </nav>
        </div>
    </header>
    <div class="col-sm-12 text-center border-bottom-1px-ccc mt50px">
        <h1>{{model.article_title}}</h1>
        <div class="add-comments">
            <i class="icon icon-font icon-thumbs-up"></i>
        </div>
    </div>

    <div class="col-sm-10 col-sm-offset-1 p20px word-break border-bottom-1px-ccc">
        {{{model.article_text}}}

    </div>


    <form class="col-sm-8 col-sm-offset-2 pt60px">
        <div class="form-group">
            <label for="InputName">Name</label>
            <input type="email" class="form-control" id="InputName" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="InputEmail1">Email address</label>
            <input type="email" class="form-control" id="InputEmail1" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="InputComment">Comments</label>
            <textarea class="form-control h200px" id="InputComment"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-default pull-right" {{action 'submit'}}>Submit</button>
        </div>
    </form>


</div>

{{view-like didInsertFunc=(action 'didInsertFunc') willDestroyFunc=(action 'willDestroyFunc')}}



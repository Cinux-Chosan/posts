

<div class="container h100p article-detail">
    <header class="fixed-nav">
        <div class="container h50px">
            <nav class="navbar navbar-inverse">
                <ul class="nav navbar-nav w100p margin0">
                    <li class="cur-pointer">{{#link-to 'index' class="navbar-brand"}}Home{{/link-to}}</li>
                    <li class="pull-right cur-pointer">{{#link-to 'login'}}Sign In{{/link-to}}</li>
                    <li class="pull-right cur-pointer">{{#link-to 'article.pub'}}Publish{{/link-to}}</li>
                    <li class="pull-right cur-pointer">{{#link-to 'article.art_list'}}Article List{{/link-to}}</li>


                </ul>
            </nav>
        </div>
    </header>
    <div class="col-sm-12 text-center border-bottom-1px-ccc mt50px">
        <h1>{{model.art_info.article_title}}</h1>
    </div>

    <div class="col-sm-10 col-sm-offset-1 p20px word-break border-bottom-1px-ccc">
        {{{model.art_info.article_text}}}
    </div>

    <div class="col-sm-10 col-sm-offset-1 p20px border-bottom-1px-ccc">
        {{#if showAddPraise}}
            <i class="icon icon-thumbs-up icon-large cur-pointer pull-right add-praise" {{action 'addPraise'}}></i>
        {{/if}}
    </div>

    {{#if model.art_comments.length}}
    <div class="col-sm-10 col-sm-offset-1 p20px word-break border-bottom-1px-ccc">
        <div class="border-bottom-1px-ccc text-bold">
            Comments:
        </div>
        <ul class="list-style-none margin0 padding0">
            {{#each model.art_comments as |item|}}
                <li class="comments-list-item p20px">
                    <p>{{item.comment_text}}</p>
                    <span class="pull-right inline-block"><span class="text-bold">Written by: </span>{{if item.name item.name '不愿留名的小伙'}}</span>
                    <div class="clearfix"></div>
                </li>
            {{/each}}
        </ul>
    </div>
    {{/if}}
    <div class="col-sm-10 col-sm-offset-1 p20px word-break">
        <div class="border-bottom-1px-rgb32 text-bold label-comments">
           Add Your Comments:
        </div>
    </div>

    <form class="col-sm-8 col-sm-offset-2">
        <div class="form-group">
            <label for="InputName">Name</label>
            <input type="email" class="form-control" id="InputName" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="InputEmail1">Email address</label>
            <input type="email" class="form-control" id="InputEmail1" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="InputComment">Comments</label>
            <textarea class="form-control h200px" id="InputComment"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-default pull-right" {{action 'submit'}}><i class="icon icon-comments icon-large"></i></button>
        </div>
    </form>


</div>

{{view-like didInsertFunc=(action 'didInsertFunc') willDestroyFunc=(action 'willDestroyFunc')}}



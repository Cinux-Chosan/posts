

<div class="login-container">
    <div class="login-header">
        <div class="login-logo"></div>
    </div>

    <div class="login-body">
        <div class="container mt20px">
            <form class="form-horizontal w400px auto-margin">
                <div class="form-group">
                    <label for="userName" class="control-label col-sm-5">User Account:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="userName" placeholder="email"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="userPwd" class="control-label col-sm-5">Password:</label>
                    <div class="col-sm-7">
                        <input type="password" class="form-control" id="userPwd" placeholder="password"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary pull-right text-bold" {{action 'login'}}>Sign in</button>
            </form>
        </div>
    </div>

    <div class="login-footer">

    </div>


</div>

{{outlet}}
